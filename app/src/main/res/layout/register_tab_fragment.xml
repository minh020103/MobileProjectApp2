<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/chonLoaiTaiKhoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn Loại Tài Khoản"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/text_do"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".3"
        />

    <Button
        app:backgroundTint="@null"
        android:id="@+id/taiKhoanChuTro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button_login"
        android:text="Chủ Trọ"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chonLoaiTaiKhoan"
        app:layout_constraintVertical_bias=".05"
        app:layout_constraintWidth_percent="0.8"
        />

    <Button
        app:backgroundTint="@null"
        android:id="@+id/taiKhoanNguoiThue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button_login"
        android:text="Người Thuê"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/taiKhoanChuTro"
        app:layout_constraintVertical_bias="0.04"
        app:layout_constraintWidth_percent="0.8"/>


</androidx.constraintlayout.widget.ConstraintLayout>