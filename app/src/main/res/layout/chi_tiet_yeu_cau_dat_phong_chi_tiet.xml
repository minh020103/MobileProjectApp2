<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbXacNhanTaiKhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="50dp"
                android:layout_height="34dp"
                android:src="@drawable/icon_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:textStyle="bold"
                android:text="Chi tiết yêu cầu"
                android:gravity="center"
                android:textSize="25sp"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTieuDeYCThongBaoChiTiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tieu de thong bao"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tvNoiDungYCThongBaoChiTiet1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noi dung thong bao"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Thông tin người gửi*"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvNoiDungYCThongBaoChiTiet2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noi dung thong bao"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tvNoiDungYCThongBaoChiTiet3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noi dung thong bao"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tvNoiDungYCThongBaoChiTiet4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noi dung thong bao"
            android:textStyle="bold"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnChiTietPhong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="10sp"
            android:backgroundTint="@color/vang"
            android:text="Chi tiết phòng" />
        <Button
            android:id="@+id/btnTuChoiYC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="10sp"
            android:backgroundTint="@color/text_do"
            android:text="Từ chối" />
        <Button
            android:id="@+id/btnChapNhanYC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="10sp"
            android:text="Chấp nhận" />



    </LinearLayout>

</LinearLayout>