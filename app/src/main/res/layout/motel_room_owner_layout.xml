<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.chutro.MotelRoomOwnerActivity"
    android:orientation="vertical">



    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp2ChuTro"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnvChuTro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/motel_room_owner_menu"
        app:itemTextColor="@drawable/custom_chutro_navigation_selector"
        app:itemIconTint="@drawable/custom_chutro_navigation_selector"/>


</LinearLayout>