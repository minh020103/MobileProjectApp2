<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.nguoithue.SearchBoLocActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--        <androidx.appcompat.widget.SearchView-->
        <!--            android:id="@+id/search"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_margin="10dp"-->
        <!--            android:layout_weight="1.5"-->
        <!--            android:background="@drawable/bg_search"-->
        <!--            android:backgroundTint="@color/text_gray2"-->
        <!--            app:iconifiedByDefault="false"-->
        <!--            app:queryHint="Tìm kiếm ..." />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1.5"
            android:background="@drawable/btn_p4"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:src="@drawable/iconp_map" />

            <TextView
                style="@style/tv_18sp"
                android:text="Quận "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_ten_quan"
                style="@style/tv_18sp"
                android:text="Thủ Đức"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_huy"
            style="@style/tv_16sp_2"
            android:layout_gravity="center_vertical"
            android:text="Hủy" />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout
                android:id="@+id/ll_gia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_gia"
                    style="@style/btn_search"
                    android:backgroundTint="@color/white"
                    android:text="Giá" />

                <ImageView
                    android:id="@+id/img_gia_down"
                    style="@style/img_down" />

                <ImageView
                    android:id="@+id/img_gia_up"
                    style="@style/img_up"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tien_ich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_tien_ich"
                    style="@style/btn_search"
                    android:backgroundTint="@color/white"
                    android:text="Tiện ích" />

                <ImageView
                    android:id="@+id/img_tien_ich_down"
                    style="@style/img_down" />

                <ImageView
                    android:id="@+id/img_tien_ich_up"
                    style="@style/img_up"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_loai_phong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_loai_phong"
                    style="@style/btn_search"
                    android:backgroundTint="@color/white"
                    android:text="Loại phòng" />

                <ImageView
                    android:id="@+id/img_loai_phong_down"
                    style="@style/img_down" />

                <ImageView
                    android:id="@+id/img_loai_phong_up"
                    style="@style/img_up"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_so_nguoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_so_nguoi"
                    style="@style/btn_search"
                    android:backgroundTint="@color/white"
                    android:text="Số người" />

                <ImageView
                    android:id="@+id/img_so_nguoi_down"
                    style="@style/img_down" />

                <ImageView
                    android:id="@+id/img_so_nguoi_up"
                    style="@style/img_up"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/ll_list_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_gray2"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_clear"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_p"
            android:padding="7dp"
            android:src="@drawable/iconp_close" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_list_selected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </HorizontalScrollView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_list_tien_ich"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_gray2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_list_loai_phong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        style="@style/btn1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Áp dụng" />

    <TextView
        style="@style/tv_20sp"
        android:layout_height="match_parent"
        android:background="@color/text_gray2"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/text1" />


</LinearLayout>