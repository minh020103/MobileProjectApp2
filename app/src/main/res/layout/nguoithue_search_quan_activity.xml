<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.nguoithue.SearchQuanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1.5"
            android:background="@drawable/bg_search"
            android:backgroundTint="@color/text_gray2"
            app:iconifiedByDefault="false"
            app:queryHint="Tìm kiếm ..." />

        <TextView
            android:id="@+id/tv_huy"
            style="@style/tv_16sp_2"
            android:layout_gravity="center_vertical"
            android:text="Hủy" />

    </LinearLayout>
    <TextView
        style="@style/tv_20sp"
        android:text="Danh sách quận"
        android:textStyle="bold" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                   android:layout_centerHorizontal="true"
                    android:text="@string/kttnd"
                    style="@style/tv_20sp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_list_quan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>