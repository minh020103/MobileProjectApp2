<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgView_phong_goi_y"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/p5" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:src="@drawable/iconp_tim1"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:src="@drawable/iconp_tim2"
                    android:visibility="gone" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_loai_phong_ds_goi_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/iconp_star"
                android:drawablePadding="5dp"
                android:text="@string/lp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_gioi_tinh_ds_goi_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/gt"
                android:textColor="@color/black"
                android:drawableRight="@drawable/iconp_star"
                android:drawablePadding="5dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_gia_ds_goi_y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="8 triệu VND/phòng"
            android:textColor="@color/text_do"
            android:textSize="18dp"
            android:textStyle="bold" />


        <com.borjabravo.readmoretextview.ReadMoreTextView
            android:id="@+id/tv_dia_chi_ds_goi_y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dcct"
            app:trimCollapsedText="@string/xem_them"
            app:trimExpandedText="@string/thu_gon"
            app:trimLength="15"
            app:trimMode="trimModeLength"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quận: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_quan_ds_goi_y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thủ Đức "
                android:textColor="@color/black" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>