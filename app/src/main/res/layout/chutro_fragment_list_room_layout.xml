<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ntsvListRoom"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/logo"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Tìm trọ tốt"
                        android:textSize="30sp"
                        android:textColor="@color/main_color_app_light"
                        android:gravity="center"
                        android:layout_marginLeft="55dp"
                        android:textStyle="bold"/>



                    <LinearLayout
                        android:id="@+id/llAdd"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle_buttom_gray"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:padding="7dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_plus"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llSearch"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle_buttom_gray"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="55dp"
                        android:padding="7dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_search" />
                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tvTimKiem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_comment"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:hint="Tìm kiếm..."
                    android:padding="10dp"/>


            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>

        <ProgressBar
            android:id="@+id/pbReLoad"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvListMotelRoom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ProgressBar
            android:id="@+id/pbLoadmore"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>